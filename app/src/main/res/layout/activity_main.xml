<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="fujiannormaluniversity.edu.androidbody.MainActivity">


    <fujiannormaluniversity.edu.androidbody.navigationbar.ANavigationBar
            android:id="@+id/navigaionbar"
            android:layout_width="match_parent"
            android:layout_height="44dp">

    </fujiannormaluniversity.edu.androidbody.navigationbar.ANavigationBar>



    <fujiannormaluniversity.edu.androidbody.classes.login.view.LoginTextField
            android:id="@+id/register_phone_inputWidget"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/login_left_right_margin"
            android:layout_marginRight="@dimen/login_left_right_margin"
            android:layout_marginTop="@dimen/login_top_margin"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/navigaionbar"


            app:title="手机号"
            app:placeholder="请输入手机号"
            />


    <fujiannormaluniversity.edu.androidbody.classes.login.view.LoginTextField
            android:id="@+id/register_sms_inputWidget"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/login_left_right_margin"
            android:layout_marginRight="@dimen/login_left_right_margin"
            android:layout_marginTop="@dimen/login_top_margin"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_phone_inputWidget"


            app:title="验证码"
            app:placeholder="请输入验证码"
            app:smsbtn="true"

            />


</android.support.constraint.ConstraintLayout>
